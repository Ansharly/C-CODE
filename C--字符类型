#include  <stdio.h>

int main()
{
	printf("%d\n", sizeof(char));//
	printf("%d\n", sizeof(short));//
	printf("%d\n", sizeof(int));//
	printf("%d\n", sizeof(long));//
	printf("%d\n", sizeof(long long));//
	printf("%d\n", sizeof(float));//
	printf("%d\n", sizeof(double));//

	return 0;
}
//%d--打印整型
//%c--打印字符
//%f--打印浮点数字--小数
//%p--以地址的形式打印
//%x--打印16进制数字
//%o.....

