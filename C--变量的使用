#define _CRT_SECURE_NO_WARNINGS//忽略安全检测，不然使用scanf会报错
#include <stdio.h>
int main()
{
	//未声明的标识符
	//声明    extern--是用来声明外部符号
	extern int g_val;
	printf("g-val=%d\n", g_val);

	return 0;
}



